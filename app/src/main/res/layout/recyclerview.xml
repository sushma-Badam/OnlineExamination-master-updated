<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="368dp"
        android:layout_height="430dp"
        android:layout_above="@+id/submitques"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/submitques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:padding="20dp"
        android:text="submit" />

    <EditText
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/capture"
        android:layout_alignBottom="@+id/capture"
        android:layout_marginEnd="26dp"
        android:layout_toStartOf="@+id/capture"
        android:ems="10"
        android:hint="score"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/recycleview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="capture" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/recycleview"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="22dp"
        android:text="exit" />


</RelativeLayout>
